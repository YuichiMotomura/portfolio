= render 'spots/header'

%main.users#main
  .users__contents
    .users__contents__title
      %h2 ログイン
    .users__contents__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field.users__contents__form__email
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field.users__contents__form__password
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "current-password"
        - if devise_mapping.rememberable?
          .field.users__contents__form__remember
            = f.check_box :remember_me
            = f.label :remember_me
        .actions.users__contents__form__btn
          = f.submit "ログイン"
      = render "devise/shared/links"

  .users__bottom
    = link_to 'トップページへ戻る', root_path
