.spots__show__contents__comments__comment__partial
  .spots__show__contents__comments__comment__partial__left
    = image_tag 'sleep_animal_cat.png'
  .spots__show__contents__comments__comment__partial__right
    .spots__show__contents__comments__comment__partial__right__text
      = simple_format(comment.comment)
    .spots__show__contents__comments__comment__partial__right__date
      %ul
        %li
          = comment.created_at.strftime('%Y/%m/%d')
        %li
          = comment.user.nickname
        - if comment.user == current_user
          %li
            = link_to spot_comment_path(comment.spot.id, comment.id), method: 'delete', data: { confirm: 'このコメントを削除します。よろしいですか？' } do
              = icon('far', 'trash-alt')
              削除
